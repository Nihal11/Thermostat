<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.tue.goelstudent.n.thermostat.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="21 &#x2103;"
        android:textSize="30dp"
        android:id="@+id/dayTemp"
        android:layout_x="23dp"
        android:layout_y="81dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="19 &#x2103;"
        android:textSize="30dp"
        android:id="@+id/nightTemp"
        android:layout_x="209dp"
        android:layout_y="88dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/dayTempPlus"
        android:layout_below="@+id/dayTemp"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginStart="34dp"
        android:layout_marginTop="76dp"
        android:layout_x="91dp"
        android:layout_y="61dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/dayTempMinus"
        android:layout_below="@+id/nightTempPlus"
        android:layout_alignStart="@+id/dayTempPlus"
        android:layout_x="96dp"
        android:layout_y="117dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/nightTempPlus"
        android:layout_alignBaseline="@+id/nightTempMinus"
        android:layout_alignBottom="@+id/nightTempMinus"
        android:layout_alignStart="@+id/nightTempMinus"
        android:layout_x="273dp"
        android:layout_y="65dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/nightTempMinus"
        android:layout_marginEnd="27dp"
        android:layout_below="@+id/dayTempPlus"
        android:layout_alignParentEnd="true"
        android:layout_x="278dp"
        android:layout_y="113dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Day"
        android:id="@+id/textView2"
        android:layout_x="48dp"
        android:layout_y="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Night"
        android:id="@+id/textView3"
        android:layout_x="241dp"
        android:layout_y="38dp" />

</RelativeLayout>
